<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sy.fiar.mapper.RolesUserMapper">

    <insert id="addRoles">
        INSERT INTO roles_user VALUES
        <foreach collection="roles" item="role" separator=",">
            (null, #{role}, #{uid})
        </foreach>
    </insert>

    <select id="getRolesByUid" parameterType="long" resultType="org.sy.fiar.bean.Role">
        SELECT r.*
        FROM roles r, roles_user ru
        WHERE r.`id` = ru.`id` AND ru.`uid` = #{uid}
    </select>

</mapper>